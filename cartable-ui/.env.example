# ===========================================
# Cartable UI - Environment Variables
# ===========================================
# Copy this file to .env.local for development
# For production, set these variables in your deployment environment

# -----------------
# NextAuth Configuration
# -----------------
# Authentication issuer URL (Identity Server)
AUTH_ISSUER=https://your-identity-server.com

# OAuth Client ID
AUTH_CLIENT_ID=your-client-id

# OAuth Client Secret
AUTH_CLIENT_SECRET=your-client-secret

# NextAuth Secret (Generate with: openssl rand -base64 32)
AUTH_SECRET=your-nextauth-secret-here

# NextAuth URL (Application base URL)
NEXTAUTH_URL=http://localhost:3000

# -----------------
# API Configuration
# -----------------
# Backend API base URL
NEXT_PUBLIC_API_BASE_URL=https://si-lab-tadbirpay.etadbir.com/api

# API Timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# -----------------
# Application Configuration
# -----------------
# Node environment (development, production, test)
NODE_ENV=development

# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# -----------------
# Optional: Analytics & Monitoring
# -----------------
# NEXT_PUBLIC_SENTRY_DSN=
# NEXT_PUBLIC_GA_MEASUREMENT_ID=

# -----------------
# Optional: Feature Flags
# -----------------
# NEXT_PUBLIC_ENABLE_PWA=true
# NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
