# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://ecartableapi.etadbirco.ir/api

# API Timeouts (in milliseconds)
# Timeout برای GET requests - بهینه شده برای موبایل
NEXT_PUBLIC_API_TIMEOUT_GET=20000

# Timeout برای POST/PUT/DELETE requests
NEXT_PUBLIC_API_TIMEOUT=30000

# Retry Configuration
# تعداد دفعات تلاش مجدد در صورت خطا
NEXT_PUBLIC_API_RETRY_COUNT=3

# تأخیر اولیه بین تلاش‌ها (milliseconds) - با exponential backoff
NEXT_PUBLIC_API_RETRY_DELAY=1000

# Authentication
AUTH_ISSUER=https://your-identity-server.com
AUTH_CLIENT_ID=your-client-id
AUTH_CLIENT_SECRET=your-client-secret
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret
