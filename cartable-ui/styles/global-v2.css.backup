/**
 * Cartable V2 - Premium Payment Management Design System
 * سیستم طراحی پرمیوم کارتابل پرداخت
 *
 * Design Philosophy:
 * - Professional financial aesthetics
 * - Clear hierarchy and information density
 * - Trust-building visual language
 * - Modern banking experience
 */

@import "tailwindcss";

/* ==================== Color Palette ==================== */
:root {
  /* Primary - Financial Blue */
  --premium-primary: #1e40af;
  --premium-primary-light: #3b82f6;
  --premium-primary-dark: #1e3a8a;
  --premium-primary-subtle: #dbeafe;

  /* Success - Money Green */
  --premium-success: #059669;
  --premium-success-light: #10b981;
  --premium-success-dark: #047857;
  --premium-success-subtle: #d1fae5;

  /* Warning - Gold */
  --premium-warning: #d97706;
  --premium-warning-light: #f59e0b;
  --premium-warning-dark: #b45309;
  --premium-warning-subtle: #fef3c7;

  /* Danger - Critical Red */
  --premium-danger: #dc2626;
  --premium-danger-light: #ef4444;
  --premium-danger-dark: #b91c1c;
  --premium-danger-subtle: #fee2e2;

  /* Info - Sky Blue */
  --premium-info: #0284c7;
  --premium-info-light: #0ea5e9;
  --premium-info-dark: #075985;
  --premium-info-subtle: #e0f2fe;

  /* Neutrals - Sophisticated Grays */
  --premium-slate-50: #f8fafc;
  --premium-slate-100: #f1f5f9;
  --premium-slate-200: #e2e8f0;
  --premium-slate-300: #cbd5e1;
  --premium-slate-400: #94a3b8;
  --premium-slate-500: #64748b;
  --premium-slate-600: #475569;
  --premium-slate-700: #334155;
  --premium-slate-800: #1e293b;
  --premium-slate-900: #0f172a;

  /* Surface Colors */
  --premium-surface-1: #ffffff;
  --premium-surface-2: #f8fafc;
  --premium-surface-3: #f1f5f9;
  --premium-surface-elevated: #ffffff;

  /* Border Colors */
  --premium-border-light: #e2e8f0;
  --premium-border-medium: #cbd5e1;
  --premium-border-dark: #94a3b8;

  /* Shadows */
  --premium-shadow-sm: 0 1px 2px 0 rgba(15, 23, 42, 0.04);
  --premium-shadow-md: 0 4px 6px -1px rgba(15, 23, 42, 0.06), 0 2px 4px -1px rgba(15, 23, 42, 0.04);
  --premium-shadow-lg: 0 10px 15px -3px rgba(15, 23, 42, 0.08), 0 4px 6px -2px rgba(15, 23, 42, 0.04);
  --premium-shadow-xl: 0 20px 25px -5px rgba(15, 23, 42, 0.1), 0 10px 10px -5px rgba(15, 23, 42, 0.04);
  --premium-shadow-2xl: 0 25px 50px -12px rgba(15, 23, 42, 0.15);

  /* Glass Effect */
  --premium-glass-bg: rgba(255, 255, 255, 0.7);
  --premium-glass-border: rgba(255, 255, 255, 0.3);
  --premium-glass-backdrop: blur(12px);

  /* Gradients */
  --premium-gradient-primary: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
  --premium-gradient-success: linear-gradient(135deg, #059669 0%, #10b981 100%);
  --premium-gradient-premium: linear-gradient(135deg, #1e40af 0%, #7c3aed 100%);
  --premium-gradient-gold: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);

  /* Typography */
  --premium-font-display: 'Yekanbakh', -apple-system, BlinkMacSystemFont, sans-serif;
  --premium-font-body: 'Yekanbakh', -apple-system, BlinkMacSystemFont, sans-serif;
  --premium-font-mono: 'SF Mono', 'Consolas', 'Monaco', monospace;
}

/* Dark Mode */
.dark {
  --premium-surface-1: #0f172a;
  --premium-surface-2: #1e293b;
  --premium-surface-3: #334155;
  --premium-surface-elevated: #1e293b;

  --premium-border-light: #334155;
  --premium-border-medium: #475569;
  --premium-border-dark: #64748b;

  --premium-glass-bg: rgba(30, 41, 59, 0.7);
  --premium-glass-border: rgba(255, 255, 255, 0.1);
}

/* ==================== Premium Card Styles ==================== */
.premium-card {
  background: var(--premium-surface-elevated);
  border: 1px solid var(--premium-border-light);
  border-radius: 12px;
  box-shadow: var(--premium-shadow-md);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.premium-card:hover {
  box-shadow: var(--premium-shadow-lg);
  border-color: var(--premium-border-medium);
  transform: translateY(-1px);
}

.premium-card-flat {
  background: var(--premium-surface-elevated);
  border: 1px solid var(--premium-border-light);
  border-radius: 12px;
  box-shadow: var(--premium-shadow-sm);
}

.premium-card-elevated {
  background: var(--premium-surface-elevated);
  border: 1px solid var(--premium-border-light);
  border-radius: 12px;
  box-shadow: var(--premium-shadow-xl);
}

.premium-card-glass {
  background: var(--premium-glass-bg);
  border: 1px solid var(--premium-glass-border);
  border-radius: 12px;
  backdrop-filter: var(--premium-glass-backdrop);
  -webkit-backdrop-filter: var(--premium-glass-backdrop);
  box-shadow: var(--premium-shadow-md);
}

/* ==================== Premium Table Styles ==================== */
.premium-table-container {
  background: var(--premium-surface-elevated);
  border: 1px solid var(--premium-border-light);
  border-radius: 12px;
  overflow: hidden;
  box-shadow: var(--premium-shadow-md);
}

.premium-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
}

.premium-table thead {
  background: linear-gradient(to bottom, var(--premium-surface-2), var(--premium-surface-3));
  border-bottom: 2px solid var(--premium-border-medium);
}

.premium-table thead th {
  padding: 1rem 1.25rem;
  text-align: right;
  font-weight: 600;
  font-size: 0.875rem;
  color: var(--premium-slate-700);
  text-transform: none;
  letter-spacing: 0;
  white-space: nowrap;
  position: sticky;
  top: 0;
  background: var(--premium-surface-2);
  z-index: 10;
}

.premium-table thead th.sortable {
  cursor: pointer;
  user-select: none;
  transition: all 0.2s ease;
}

.premium-table thead th.sortable:hover {
  background: var(--premium-surface-3);
  color: var(--premium-primary);
}

.premium-table tbody tr {
  border-bottom: 1px solid var(--premium-border-light);
  transition: all 0.2s ease;
}

.premium-table tbody tr:last-child {
  border-bottom: none;
}

.premium-table tbody tr:hover {
  background: var(--premium-surface-2);
}

.premium-table tbody td {
  padding: 1rem 1.25rem;
  font-size: 0.875rem;
  color: var(--premium-slate-700);
}

/* ==================== Premium Status Badges ==================== */
.premium-status-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.375rem 0.75rem;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 600;
  letter-spacing: 0.025em;
  transition: all 0.2s ease;
}

.premium-status-badge.success {
  background: var(--premium-success-subtle);
  color: var(--premium-success-dark);
  border: 1px solid var(--premium-success-light);
}

.premium-status-badge.warning {
  background: var(--premium-warning-subtle);
  color: var(--premium-warning-dark);
  border: 1px solid var(--premium-warning-light);
}

.premium-status-badge.danger {
  background: var(--premium-danger-subtle);
  color: var(--premium-danger-dark);
  border: 1px solid var(--premium-danger-light);
}

.premium-status-badge.info {
  background: var(--premium-info-subtle);
  color: var(--premium-info-dark);
  border: 1px solid var(--premium-info-light);
}

.premium-status-badge.neutral {
  background: var(--premium-slate-100);
  color: var(--premium-slate-700);
  border: 1px solid var(--premium-slate-300);
}

/* ==================== Premium Filters ==================== */
.premium-filter-group {
  background: var(--premium-surface-elevated);
  border: 1px solid var(--premium-border-light);
  border-radius: 12px;
  padding: 1.25rem;
  box-shadow: var(--premium-shadow-sm);
}

.premium-filter-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-top: 0.75rem;
}

.premium-filter-chip {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: var(--premium-surface-2);
  border: 1px solid var(--premium-border-light);
  border-radius: 9999px;
  font-size: 0.875rem;
  color: var(--premium-slate-700);
  cursor: pointer;
  transition: all 0.2s ease;
  user-select: none;
}

.premium-filter-chip:hover {
  background: var(--premium-surface-3);
  border-color: var(--premium-border-medium);
  transform: translateY(-1px);
  box-shadow: var(--premium-shadow-sm);
}

.premium-filter-chip.active {
  background: var(--premium-primary);
  color: white;
  border-color: var(--premium-primary);
  font-weight: 600;
}

.premium-filter-chip.active:hover {
  background: var(--premium-primary-dark);
  border-color: var(--premium-primary-dark);
}

/* ==================== Premium Buttons ==================== */
.premium-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.625rem 1.25rem;
  font-size: 0.875rem;
  font-weight: 600;
  line-height: 1.5;
  border-radius: 8px;
  transition: all 0.2s ease;
  cursor: pointer;
  user-select: none;
  border: 1px solid transparent;
}

.premium-btn-primary {
  background: var(--premium-gradient-primary);
  color: white;
  box-shadow: var(--premium-shadow-sm);
}

.premium-btn-primary:hover {
  box-shadow: var(--premium-shadow-md);
  transform: translateY(-1px);
}

.premium-btn-primary:active {
  transform: translateY(0);
}

.premium-btn-outline {
  background: transparent;
  color: var(--premium-slate-700);
  border: 1px solid var(--premium-border-medium);
}

.premium-btn-outline:hover {
  background: var(--premium-surface-2);
  border-color: var(--premium-border-dark);
}

.premium-btn-ghost {
  background: transparent;
  color: var(--premium-slate-600);
}

.premium-btn-ghost:hover {
  background: var(--premium-surface-2);
  color: var(--premium-slate-700);
}

/* ==================== Premium Metrics Cards ==================== */
.premium-metric-card {
  background: var(--premium-surface-elevated);
  border: 1px solid var(--premium-border-light);
  border-radius: 12px;
  padding: 1.5rem;
  box-shadow: var(--premium-shadow-md);
  transition: all 0.3s ease;
}

.premium-metric-card:hover {
  box-shadow: var(--premium-shadow-lg);
  transform: translateY(-2px);
}

.premium-metric-value {
  font-size: 2rem;
  font-weight: 700;
  line-height: 1.2;
  background: var(--premium-gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.premium-metric-label {
  font-size: 0.875rem;
  color: var(--premium-slate-500);
  margin-top: 0.25rem;
  font-weight: 500;
}

/* ==================== Premium Animations ==================== */
@keyframes premium-fade-in {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes premium-slide-in {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes premium-scale-in {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.premium-animate-fade-in {
  animation: premium-fade-in 0.3s ease-out;
}

.premium-animate-slide-in {
  animation: premium-slide-in 0.3s ease-out;
}

.premium-animate-scale-in {
  animation: premium-scale-in 0.3s ease-out;
}

/* ==================== Premium Scrollbar ==================== */
.premium-scrollbar::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

.premium-scrollbar::-webkit-scrollbar-track {
  background: var(--premium-surface-2);
  border-radius: 4px;
}

.premium-scrollbar::-webkit-scrollbar-thumb {
  background: var(--premium-border-medium);
  border-radius: 4px;
  transition: background 0.2s ease;
}

.premium-scrollbar::-webkit-scrollbar-thumb:hover {
  background: var(--premium-border-dark);
}

/* ==================== Premium Typography ==================== */
.premium-heading-1 {
  font-size: 2rem;
  font-weight: 700;
  line-height: 1.2;
  color: var(--premium-slate-900);
  letter-spacing: -0.025em;
}

.premium-heading-2 {
  font-size: 1.5rem;
  font-weight: 600;
  line-height: 1.3;
  color: var(--premium-slate-800);
  letter-spacing: -0.015em;
}

.premium-heading-3 {
  font-size: 1.25rem;
  font-weight: 600;
  line-height: 1.4;
  color: var(--premium-slate-800);
}

.premium-body {
  font-size: 0.9375rem;
  line-height: 1.6;
  color: var(--premium-slate-700);
}

.premium-body-sm {
  font-size: 0.875rem;
  line-height: 1.5;
  color: var(--premium-slate-600);
}

.premium-caption {
  font-size: 0.75rem;
  line-height: 1.4;
  color: var(--premium-slate-500);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 600;
}

/* ==================== Premium Utilities ==================== */
.premium-divider {
  height: 1px;
  background: linear-gradient(to right, transparent, var(--premium-border-light), transparent);
  margin: 1.5rem 0;
}

.premium-divider-vertical {
  width: 1px;
  background: linear-gradient(to bottom, transparent, var(--premium-border-light), transparent);
  margin: 0 1rem;
}

.premium-glow {
  box-shadow: 0 0 20px rgba(30, 64, 175, 0.2);
}

.premium-glow-success {
  box-shadow: 0 0 20px rgba(5, 150, 105, 0.2);
}

.premium-glow-warning {
  box-shadow: 0 0 20px rgba(217, 119, 6, 0.2);
}

.premium-glow-danger {
  box-shadow: 0 0 20px rgba(220, 38, 38, 0.2);
}
